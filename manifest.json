{
  "manifest_version": 3,
  "name": "Octopus",
  "version": "1.0",
  "description": "A Chrome extension that helps you choose the right content based on your mood; Calm, Clarity, or Spark using Chrome built-in AI (Prompt API)",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
    ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["config.js", "marked.js", "logger.js", "content.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["fonts/*", "config.js"],
    "matches": ["<all_urls>"]
  }]
}
